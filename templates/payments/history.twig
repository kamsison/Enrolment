{% extends "layouts/admin.twig" %}

{% block title %}UM | Import Users{% endblock %}

{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Payment History : </h1>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="row">
                <table class="table">
                    <thead>
                    <tr>
                        <th>Transaction Date</th>
                        <th>Amount</th>
                        <th>Payment Mode</th>
                        <th>Reference Number</th>
                        <th>Payment For</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for payment in payments %}
                        <tr>
                            <td>{{ payment.created_at }}</td>
                            <td>{{ payment.amount }}</td>
                            <td>{{ payment.description }}</td>
                            <td>{{ payment.reference_number }}</td>
                            <td>{{ payment.fee_id }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <div class="row">
                <a href="/Enrolment/payment" class="btn btn-primary"><- Back</a>
            </div>
        </div>
    </div>
{% endblock %}