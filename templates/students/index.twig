{% extends "layouts/admin.twig" %}

{% block title %}UM | Students Personal Information{% endblock %}

{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Students Personal Information</h1>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="row">
                <form class="form form-horizontal" enctype="multipart/form-data" role="form" method="post" action="/Enrolment/students/edit.twig">
                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            <strong>Oh snap!</strong> {{ error }}
                        </div>
                    {% endif %}
                    <div class="col-lg-12">
                        <a class="btn btn-warning btn-s" href="/Enrolment/students/add" role="button">Add New</a>
                        <div class="row">
                            </div>

                            <table id="cards" class="table-striped table">
                                <thead>
                                <tr>

                                    <th style="width:25%;">Last Name</th>
                                    <th style="width:25%;">First Name</th>
                                    <th style="width:25%;">Birth Date</th>
                                    <th>Gender</th>
                                    <th style="width:25%;">Address</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for student in students %}
                                    <tr>

                                        <td style="width:25%;">{{ student.last_name|e }}</td>
                                        <td style="width:25%;">{{ student.first_name|e }}</td>
                                        <td style="width:25%;">{{ student.birth_date|e }}</td>
                                        <td>{{ student.gender|e }}</td>
                                        <td style="width:25%;">{{ student.address|e }}</td>
                                        <td style="width:25%;"><span ><a href="/Enrolment/students/{{ student.id }}/edit">Edit</a></span>&nbsp;|&nbsp;<span><a onclick="return confirm('Are you sure you want to securely delete this item?');" href="/Enrolment/students/{{ student.id }}/delete">Delete</a></span></td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}