{% extends "layouts/admin.twig" %}

{% block title %}UM | List of CAFs{% endblock %}

{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">List of CAFs</h1>
            </div>
        </div>
        <div class="row">
            <table id="cafs" class="table-striped table">
                <thead>
                <tr>
                    <th></th>
                    <th>CAF Id</th>
                    <th>DPF Id</th>
                    <th>Acquire ID</th>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Middle Name</th>
                    <th>Designation</th>
                    <th>Department</th>
                    <th>Unit</th>
                    <th>Status</th>
                    <th>Position</th>
                    <th>Actions</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
{% endblock %}

{% block js %}
    <script>
        var status = {{ status|json_encode()|raw }};
        var link = "/um/caf/data/" + status;
    </script>
    {% raw %}
        <script>
            $(document).ready(function() {
                $('#cafs').dataTable({
                    "ajax": link,
                    "bSort" : false,
                    "processing": true,
                    "serverSide": true,
                    "pageLength": 25
                });
            });
        </script>
    {% endraw %}
{% endblock %}