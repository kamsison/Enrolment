{% extends "layouts/admin.twig" %}

{% block title %}UM | Settings{% endblock %}

{% block isSettings %}active{% endblock %}

{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Settings</h1>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="row">
                <form method="post">
                    {% if settings %}
                        {% for setting in settings %}
                            <div class="form-group">
                                <label for="name">{{ setting.code|replace({'_' : " "})|title }}</label>
                                <input type="text" class="form-control" name="{{ setting.code }}" id="name" placeholder="Enter value"
                                       {% if setting.value %}value="{{ setting.value }}{% endif %}">
                            </div>
                        {% endfor %}
                        <div class="form-group">
                            <input type="submit" class="btn btn-default"/>
                        </div>
                    {% endif %}
                </form>
            </div>
        </div>
    </div>
{% endblock %}