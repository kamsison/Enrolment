{% extends "layouts/admin.twig" %}

{% block title %}UM | List of Users{% endblock %}

{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">List of Users</h1>
            </div>
        </div>
        <div class="row">
            <table id="users" class="table-striped table">
                <thead>
                <tr>
                    <th>Acquire ID</th>
                    <th>Last Name</th>
                    <th>First Name</th>
                    <th>Middle Name</th>
                    <th>Department</th>
                    <th>Unit</th>
                    <th>Hire Date</th>
                    <th>Designation</th>
                    <th>Birth Date</th>
                    <th>Status</th>
                    <th>Actions</th>
                </tr>
                </thead>
            </table>
        </div>
    </div>
{% endblock %}

{% block js %}
    {% raw %}
        <script>
            $(document).ready(function() {
                $('#users').dataTable({
                    "ajax": "/um/users/data",
                    "bSort" : false,
                    "processing": true,
                    "serverSide": true,
                    "pageLength": 25
                });
            });
        </script>
    {% endraw %}
{% endblock %}