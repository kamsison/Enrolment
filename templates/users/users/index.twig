{% extends "layouts/admin.twig" %}

{% block title %}UM | Import Users{% endblock %}

{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Import Users</h1>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="row">
                <form class="form form-horizontal" enctype="multipart/form-data" role="form" method="post" action="/um/users/import">
                    {% if error %}
                        <div class="alert alert-danger" role="alert">
                            <strong>Oh snap!</strong> {{ error }}
                        </div>
                    {% endif %}
                    <div class="col-lg-12">
                        <label for="file">Upload Roster File</label>
                        <input type="file" name="file" id="file">
                        <p class="help-block">The file is in Excel format issued by HR.</p>
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}