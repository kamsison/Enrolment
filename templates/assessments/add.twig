{% extends "layouts/admin.twig" %}

{% block title %}UM | New Assessment{% endblock %}

{% block content %}
    <div id="page-wrapper">
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header">Add Assessment</h1>
            </div>
        </div>
        <div class="col-lg-6">
        <form class="form form-horizontal" enctype="multipart/form-data" role="form" method="post" action="/Enrolment/assessments/add">
            <input type="hidden" name="id" {% if assessment %}value="{{ assessment.id }}"{% endif %} />
            <div class="form-group">
                <label>Course</label>
                <input type="text" class="form-control" id="course" name="course" value="{% if assessment %}{{ assessment.course }}{% endif %}" placeholder="course">
            </div>
            <div class="form-group">
                <label>Year Level</label>
                <input type="text" class="form-control" id="year level" name="year_level"value="{% if assessment %}{{ assessment.year_level }}{% endif %}" placeholder="year level">
            </div>

            <div class="form-group">
                <label>Tuition</label>
                <input type="text" class="form-control" id="tuition" name="tuition" value="{% if assessment %}{{ assessment.tuition }}{% endif %}" placeholder="tuition">
            </div>

            <div class="form-group">
                <label>Fix charges</label>
                <input type="text" class="form-control" id="fix_charges" name="fix_charges" value="{% if assessment %}{{ assessment.fix_charges }}{% endif %}" placeholder="tuition">
            </div>

            <div class="form-group">
                <label>Other Charges</label>
                <input type="text" class="form-control" id="payola" name="payola" value="{% if assessment %}{{ assessment.payola }}{% endif %}" placeholder="payola">
            </div>

            <div class="form-group">
                <label>Total Assessment: {{ assessment.tuition+assessment.fix_charges+assessment.payola }}   </label>

            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-default">Submit</button>
            </div>
        </form>
    </div>
{% endblock %}